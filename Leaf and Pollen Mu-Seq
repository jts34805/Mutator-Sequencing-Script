### Process UMIs, trim and filter reads ###
fastp -i /home/jts34805/output1/processed/NA14-11-LEAF_R1B_001.fastq.gz -I /home/jts34805/output1/processed/NA14-11-LEAF_R2B_001.fastq.gz -o /home/jts34805/output1/processed/NA14-11-LEAF_R1_001.fq.gz -O /home/jts34805/output1/processed/NA14-11-LEAF_R2_001.fq.gz -U --umi_loc read2 --umi_len 8 --umi_skip 11 --umi_prefix UMI --length_required 40 --trim_poly_x --cut_tail --adapter_fasta /home/jts34805/output/processed/adapter.fa
rm fastp.html fastp.json /home/jts34805/output1/processed/read1a.fastq.gz /home/jts34805/output1/processed/read1b.fq.gz /home/jts34805/output1/processed/read2b.fq.gz

### Align Reads to W22 Genome###
ml Bowtie2
bowtie2 -x /home/jts34805/output1/W22Genome/W22 --phred33 -X 1000 --no-mixed --no-discordant -1 /home/jts34805/output1/processed/NA14-11-LEAF_R1_001.fq.gz -2 /home/jts34805/output1/processed/NA14-11-LEAF_R2_001.fq.gz -b /home/jts34805/output1/mapped/mapped.bam

#View Alignment#
samtools view -bS > /home/jts34805/output1/mapped/mapped.bam 
samtools sort /home/jts34805/output1/mapped/mapped.bam -o output/mapped/mapped.bam
samtools index /home/jts34805/output/mapped/mapped.bam

### Deduplicate reads using UMIs ###
umi_tools group -I "/home/jts34805/output1/mapped/mapped.bam" --paired --chimeric-pairs discard --unpaired-reads discard --output-bam -S "output/dedup/mappedDedup.bam"

